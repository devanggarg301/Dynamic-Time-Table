    .heading {
        width: 100%;
        height: 60px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 20px;
        padding-top: 8px;
    }
    
    .options {
        margin:0px;
        font-size: 20px;
        padding-top: 20px;
    }
    
    .home {
        width: 99%;
        height: 35px;
        padding-top:35px ;
    }
    a{
        text-decoration: none;
    }
    .home:hover{
        animation-duration: 0ms;
        border: solid 2px gray;
    }
    .set{
        display: flex;
    }
    .email{
        margin-top: 20px;
        margin-left:10px;
        font-size: 20px;
    }
    .em_inp{
        background-color: black;
        margin-top: 15px;
        width:80%;
        margin-left: 10px;
        font-size: 15px;
    }
    .se{
        background-color: black;
        margin-top: 15px;
        margin-left: 10px;
        font-size: 15px;
        width:81%;
    }
    #uni{
        margin-bottom: 30px;
    }
    .but_ch{
        background-color: #64B6FF;
        height:50px;
        margin-left: 10px;
        width:30%;
        font-size: 15px;
        border-radius: 8px;
    }
    .pro_set{
        margin:20px;
        background-color: #0d3965;
        width:50%;
        border-radius: 8px;
    }
    .yr{
        margin-top: 20px;
        font-size: 20px;
        margin-left: 10px;
    }
    .branch{
        margin-top: 20px;
        margin-left: 10px;
        font-size: 20px;
    }
    .section{
        margin-top: 20px;
        margin-left: 10px;
        font-size: 20px;
    }
    .hea{
        display: flex;
        justify-content: center;
    }
    .img{
        background-image: url("img.jpeg");
        background-color: aquamarine;
        background-size: cover;
        height:200px;
        width:200px;
        border-radius: 50%;
        display: flex;
        margin-top: 20px;
        margin-left: 120px;
    }
    #current{
        background-color: #092039;
    }
    .viewtime{
        display: flex;
        justify-content: center;
    }
    .but_view{
        background-color: #64B6FF;
        height:30px;
        border-radius: 8px;
    }
    .username{
        font-size: 20px;
        display: flex;
        justify-content: center;
        margin-top: 15px;
     margin-bottom: 15px;   
    }
    .year{
    font-size: 20px;
    display: flex;
    justify-content: center;
    margin-bottom: 15px;
    }
    .bran{
     font-size: 20px;
     display: flex;
     justify-content: center;
     margin-bottom: 15px;
    }
    .del{
        display:flex;
        justify-content: end;
        margin-right: 8px;
    }
    .but_del{
        background-color: rgb(186, 63, 63);
        height:40px;
        margin-bottom: 6px;
        margin-top:70px;
        border-radius: 8px;
    }
    .pro{
        background-color: #0d3965;
        margin-left: 0px;
        margin-right:10px ;
        width:460px;
        margin-top: 20px;
        margin-bottom: 20px;
        border-radius: 8px;
    }
